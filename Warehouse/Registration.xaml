<Window x:Class="Warehouse.Registration"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Warehouse"
        mc:Ignorable="d"
        Title="Registration" Height="248.089" Width="262.173">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBox x:Name="TBfio" Width="100" Height="30" FontSize="18" Text="ФИО"/>
            <TextBox x:Name="TBlogin" Width="100" Height="30" FontSize="18" Margin="0,2,0,2" Text="Логин"/>
            <TextBox x:Name="TBpass" Width="100" Height="30" FontSize="18" Text="Пароль"/>
            <Button x:Name="BtnOK" Content="ОК" FontSize="16" Margin="10" Click="BtnOK_Click"/>
            <Button x:Name="BtnCancel" Content="Отмена" FontSize="16" Click="BtnCancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
