<Window x:Class="Warehouse.Registration"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Warehouse"
        mc:Ignorable="d"
        Title="Registration" Height="248.089" Width="262.173" Background="LightGray">
    <Grid>
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <StackPanel Orientation="Horizontal">
            <Label Content="ФИО"/>
            <TextBox x:Name="TBfio" Width="100" Margin="14,0,0,0"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="0,2,0,2">
            <Label Content="Логин"/>
            <TextBox x:Name="TBlogin" Width="100" Margin="7,0,0,0"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label Content="Пароль"/>
            <TextBox x:Name="TBpass" Width="100"/>
        </StackPanel>
        <Button x:Name="BtnOK" Content="ОК" Margin="10" Click="BtnOK_Click"/>
        <Button x:Name="BtnCancel" Content="Отмена" Click="BtnCancel_Click"/>
    </StackPanel>
    </Grid>
</Window>
