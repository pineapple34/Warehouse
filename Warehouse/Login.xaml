<Window x:Class="Warehouse.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Warehouse"
        mc:Ignorable="d"
        Title="Login" Height="248.148" Width="264.889" ResizeMode="NoResize" Background="LightGray">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal">
                <Label Content="Логин"/>
                <TextBox x:Name="TBlogin" Width="100" Margin="7,0,0,0"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,2,0,2">
                <Label Content="Пароль"/>
                <TextBox x:Name="TBpass" Width="100"/>
            </StackPanel>
            <Button x:Name="BtnLogin" Content="Вход" Margin="10" Click="BtnLogin_Click"/>
            <Button x:Name="BtnReg" Content="Регистрация" Click="BtnReg_Click"/>
        </StackPanel>
    </Grid>
</Window>
