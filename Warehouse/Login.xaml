<Window x:Class="Warehouse.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Warehouse"
        mc:Ignorable="d"
        Title="Login" Height="248.148" Width="264.889" ResizeMode="NoResize">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBox x:Name="TBlogin" Width="150" Height="30" FontSize="20" Margin="0,0,0,2" Text="Логин"/>
            <TextBox x:Name="TBpass" Width="150" Height="30" FontSize="20" Text="Пароль"/>
            <Button x:Name="BtnLogin" Content="Вход" FontSize="18" Margin="10" Click="BtnLogin_Click"/>
            <Button x:Name="BtnReg" FontSize="18" Content="Регистрация" Click="BtnReg_Click"/>
        </StackPanel>
    </Grid>
</Window>
